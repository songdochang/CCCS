@model IEnumerable<CCCS.Web.Models.Users.RegistrationApprovalModel>

@if (Model.Count() > 0)
{
    <div class="panel panel-info">
        <div class="panel-heading">
            <span data-toggle="collapse" href="#RA" aria-expanded="true">
                Web Access Approval<span id="chevronRA" class="glyphicon glyphicon-chevron-up" style="margin-left: 10px;"></span>
            </span>
        </div>
        <div class="panel-body collapse in" id="RA">
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Department</th>
                        <th>Title</th>
                        <th class="col-md-1">Date Requested</th>
                        <th>Email</th>
                        <th>Phone Number</th>
                        <th class="col-md-1">Employee Number</th>
                        <th class="col-md-1"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var m in Model)
                    {
                        <tr>
                            <td>@m.Name</td>
                            <td>@m.Department</td>
                            <td>@m.Title</td>
                            <td>
                                @{
                                    var dt = (DateTime)m.DateRegistered;
                                    @dt.ToString("MM-dd-yyyy")
                                }
                            </td>
                            <td>@m.Email</td>
                            <td>@m.PhoneNumber</td>
                            <td>@m.EmployeeNumber</td>
                            <td class="text-right">
                                @Html.ActionLink("Approve", "ApproveRegistration", "Notice", new { id = m.UserID, returnUrl = Request.Url.PathAndQuery }, null)
                            </td>
                        </tr>
                                    }
                </tbody>
            </table>
        </div>
    </div>
                                    }
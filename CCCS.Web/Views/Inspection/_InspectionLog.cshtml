@model List<CCCS.Core.Domain.Inspection.InspectionLog>
@if (Model.Count() > 0)
            {
    <table class="table table-condensed table-striped">
        <thead>
            <tr>
                <th>Date</th>
                <th>Activity</th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-left">
                    @item.Date
                </td>
                <td class="text-left">
                    @item.Activity
                    @if (item.Activity.Contains("SVC email notification") || item.Activity.Contains("SVC sent to Department"))
                    {
                        <span class="glyphicon glyphicon-ok-sign mar-left-10" style="color: green; font-size: 12pt;"></span>
                    }
                    else if (item.Activity.Contains("email"))
                    {
                        <span class="glyphicon glyphicon-envelope mar-left-10" style="color: Highlight;"></span>
                    }
                    else if (item.Activity.Contains("approved"))
                    {
                        <span class="glyphicon glyphicon-thumbs-up mar-left-10" style="color: green; font-size: 11pt;"></span>
                    }
                    else if (item.Activity.Contains("rejected"))
                    {
                        <span class="glyphicon glyphicon-thumbs-down mar-left-10" style="color: red; font-size: 11pt;"></span>
                    }
                    else if (item.Activity.Contains("Cancelled"))
                    {
                        <span class="glyphicon glyphicon-ban-circle mar-left-10" style="color: red; font-size: 11pt;"></span>
                    }
                </td>
            </tr>
        }
    </table>
}

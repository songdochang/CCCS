@model IEnumerable<CCCS.Web.Models.EmailLog>
@if (Model.Count() > 0)
{
    <div class="mar-top-20">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th class="col-md-2">Date Sent</th>
                    <th class="col-md-2">Notice Type</th>
                    <th class="col-md-4">To Address</th>
                    <th class="col-md-4">Cc Address</th>
                </tr>
            </thead>
            @foreach (var l in Model)
            {
                <tr>
                    <td>
                        @l.DateSent
                    </td>
                    <td>
                        @l.NoticeType
                    </td>
                    <td>
                        @l.EmailTo
                    </td>
                    <td>
                        @l.EmailCc
                    </td>
                </tr>
            }
        </table>
    </div>
}

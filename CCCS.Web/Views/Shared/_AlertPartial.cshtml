@if (TempData["Message"] != null && !string.IsNullOrEmpty(TempData["Message"].ToString()))
{
    if (TempData["Message"].ToString().StartsWith("Error: "))
    {
        <div class="alert alert-danger alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <span class="glyphicon glyphicon-warning-sign mar-right-10"></span>@TempData["Message"].ToString()
        </div>
    }
    else
    {
        <div class="alert alert-success alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <span class="glyphicon glyphicon-ok-sign mar-right-10"></span>@TempData["Message"].ToString()
        </div>
    }
}